<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf" >
            <ImageView
                android:padding="10dp"
                android:src="@drawable/samsung"
                android:id="@+id/imgAnhDaiDienAdmin"
                android:background="@null"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4.8">

                <TextView
                    android:id="@+id/txtTenSanPhamAdmin"
                    android:textStyle="bold"
                    android:text="Tên sản phẩm"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/txtGiaAdmin"
                    android:text="Giá sản phẩm"
                    android:layout_marginBottom="0dp"
                    android:textSize="17sp"
                    android:textColor="#f6553f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng : "
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txtSoLuongAdmin"
                        android:maxLines="1"
                        android:layout_marginLeft="4dp"
                        android:textSize="18sp"
                        android:text="20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtMoTaAdmin"
                    android:maxLines="1"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:text="Mô tả sản phẩm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="top"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgXoaSanPhamAdmin"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:drawable/ic_delete"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"/>
                <ImageView
                    android:id="@+id/imgSuaSanPhamAdmin"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:drawable/ic_menu_edit"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>