                app:srcCompat="@drawable/dienthoaixiaomi" />

            <TextView
                android:id="@+id/txt_capsac1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Xiaomi"
